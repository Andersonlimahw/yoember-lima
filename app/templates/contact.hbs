<h1>Contact page</h1>

<div class="jumbotron text-center">
	<h1>Contact Us</h1>

	<br/><br/>

    <p>Contact Us, using the form below</p>

	<div class="contact-form form-horizontal form-group form-group-lg row center-block">
		<div class="col-xs-12">
            <div class="form-group has-feedback {{if isValidEmail 'has-success'}}">
                {{input 
                type="email" 
                value=emailContact 
                class="form-control" 
                placeholder="* Please type your e-mail address." 
                autofocus="autofocus"}}
                <span 
                class="{{if isValidEmail 'glyphicon glyphicon-ok form-control-feedback'}}"
                aria-hidden="true"></span>

            </div>
		</div>
		
        <div class="col-xs-12">
            <div class="form-group has-feedback {{if messageValid 'has-success'}}">
                {{textarea 
                class="form-control" 
                placeholder="* say something" 
                rows="7"                
                value=message}}
                <span 
                class="{{if messageValid 'glyphicon glyphicon-ok form-control-feedback'}}"
                aria-hidden="true"></span>
            </div>
		</div>
        <div class="col-xs-4 pull-right ">
			<button 
				class="btn btn-lg btn-block {{if isAllValid 'btn-success' 'btn-primary'}} " 
				disabled={{isDisabled}} 
				{{action 'sendMessage'}}>
					Send message
			</button>
		</div>
	</div>

	{{#if responseMessage}}
     <div class="alert alert-success">{{responseMessage}}</div>
	{{/if}}

	<br/><br/>
</div>